From: You <you@example.com>
Date: Sat, 6 Dec 2025 00:00:00 +0000
Subject: [PATCH] net: tcp: add lotspeed congestion control

---
 net/ipv4/Kconfig  | 12 ++++++++++++
 net/ipv4/Makefile |  1 +
 2 files changed, 13 insertions(+)

diff --git a/net/ipv4/Kconfig b/net/ipv4/Kconfig
index 000000000000..111111111111 100644
--- a/net/ipv4/Kconfig
+++ b/net/ipv4/Kconfig
@@ -563,6 +563,18 @@ config TCP_CONG_BRUTAL
 	  Very aggressive loss-based congestion control.
 	  Only recommended for research or controlled environments.

+config TCP_CONG_LOTSPEED
+	tristate "LotSpeed TCP congestion control"
+	default n
+	help
+	  LotSpeed / Zeta TCP congestion control algorithm
+	  by uk0. Provides auto-scaling rate adaptation and
+	  learning-based RTT/BW heuristics.
+
+	  To use it at runtime:
+	    sysctl -w net.ipv4.tcp_congestion_control=lotspeed
+
+
diff --git a/net/ipv4/Makefile b/net/ipv4/Makefile
index 000000000000..111111111111 100644
--- a/net/ipv4/Makefile
+++ b/net/ipv4/Makefile
@@ -35,6 +35,7 @@ obj-$(CONFIG_TCP_CONG_BBR1) += tcp_bbr1.o
 obj-$(CONFIG_TCP_CONG_BBRPLUS) += tcp_bbrplus.o
 obj-$(CONFIG_TCP_CONG_BRUTAL) += tcp_brutal.o
 obj-$(CONFIG_TCP_CONG_BIC) += tcp_bic.o
+obj-$(CONFIG_TCP_CONG_LOTSPEED) += tcp_lotspeed.o

 obj-$(CONFIG_INET_DIAG) += inet_diag.o
 obj-$(CONFIG_INET_TCP_DIAG) += tcp_diag.o
