From: Your Name <you@example.com>
Date: Sat, 6 Dec 2025 00:00:00 +0000
Subject: [PATCH] net: tcp: add lotspeed congestion control

---
 net/ipv4/Kconfig  | 11 +++++++++++
 net/ipv4/Makefile |  1 +
 2 files changed, 12 insertions(+)

diff --git a/net/ipv4/Kconfig b/net/ipv4/Kconfig
index a1b83f8abc12..def456789abc 100644
--- a/net/ipv4/Kconfig
+++ b/net/ipv4/Kconfig
@@ -709,6 +709,17 @@ config TCP_CONG_BRUTAL
 	  TCP Brutal is actively maintained to be in sync with the Brutal
 	  implementation in Hysteria.
 
+config TCP_CONG_LOTSPEED
+	tristate "LotSpeed TCP congestion control"
+	default n
+	help
+	  LotSpeed / Zeta TCP congestion control algorithm.
+	  Provides auto-scaling bandwidth tracking and RTT-based
+	  heuristics from uk0's Zeta-TCP.
+
+	  To enable:
+	    sysctl -w net.ipv4.tcp_congestion_control=lotspeed
+
 choice
 	prompt "Default TCP congestion control"
 	default DEFAULT_CUBIC
diff --git a/net/ipv4/Makefile b/net/ipv4/Makefile
index 1234abcd5678..5678abcd1234 100644
--- a/net/ipv4/Makefile
+++ b/net/ipv4/Makefile
@@ -48,6 +48,7 @@ obj-$(CONFIG_TCP_CONG_BBR) += tcp_bbr.o
 obj-$(CONFIG_TCP_CONG_BBR1) += tcp_bbr1.o
 obj-$(CONFIG_TCP_CONG_BBRPLUS) += tcp_bbrplus.o
 obj-$(CONFIG_TCP_CONG_BRUTAL) += tcp_brutal.o
+obj-$(CONFIG_TCP_CONG_LOTSPEED) += tcp_lotspeed.o
 obj-$(CONFIG_TCP_CONG_BIC) += tcp_bic.o
 obj-$(CONFIG_TCP_CONG_CDG) += tcp_cdg.o
 obj-$(CONFIG_TCP_CONG_CUBIC) += tcp_cubic.o
